<div class='center_div'>
  <div class='card'>
    <div class='card-body'>
      <h4 class='text-center'>Sign Up</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>

          <div class='field'>
            <b><%= f.label :email %></b><br />
            <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
          </div>

          <div class='field'>
           <p><b><%= f.label :phone %></b>(valid 11 digit phone number)<br />
           <%= f.text_field :phone %></p>
          </div>

          <div class='field'>
           <p><b><%= f.label :username %></b>(containing 30 characters, special characters allowed)<br />
           <%= f.text_field :username %></p>
          </div>

          <div class='field'>
            <b><%= f.label :password %></b>
            <% if @minimum_password_length %>
            <em>(minimum 8 characters with at least one capital letter and a special character)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: 'new-password' %>
          </div>

          <div class='field'>
            <b><%= f.label :password_confirmation %></b><br />
            <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
          </div>

          <div class='actions'>
            <%= f.submit 'Sign up' %>
          </div>
        <% end %>

      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
